# =============================================================
# Django Backend Template — Environment Variables
# =============================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# NEVER commit .env to version control.
# =============================================================

# ---- Django ----
DJANGO_SECRET=change-me-to-a-long-random-string
DEBUG=False

# ---- Database (MySQL) ----
MYSQL_DB_NAME=myproject_db
MYSQL_DB_USER=myproject_user
MYSQL_DB_PASSWORD=supersecretpassword
MYSQL_DB_HOST=127.0.0.1
MYSQL_DB_PORT=3306

# ---- Redis Cache ----
REDIS_URL=redis://127.0.0.1:6379/0

# ---- HMAC Auth ----
# Shared secret between server and mobile client for signing requests.
# Generate a strong random value, e.g.: openssl rand -hex 32
HMAC_SHARED_SECRET=change-me-to-a-strong-random-secret
HMAC_ALLOWED_DRIFT_SECONDS=300
HMAC_NONCE_TTL_SECONDS=600

# ---- JWT Auth ----
# Generate a strong random value, e.g.: openssl rand -hex 32
JWT_SECRET=change-me-to-a-strong-random-secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TTL=60        # minutes
JWT_REFRESH_TTL=7         # days

# ---- API Documentation (Swagger) ----
# The token used to obfuscate the API docs URL.
# Access docs at /api/<API_DOCS_TOKEN>/docs/
# Generate: openssl rand -hex 16
API_DOCS_TOKEN=change-me-before-deploy

# ---- AWS S3 (optional — for file uploads) ----
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_S3_REGION_NAME=us-east-1

# ---- Entrypoint script (Docker) ----
# DATABASE=mysql       # Uncomment to enable MySQL readiness wait
# RUN_MIGRATIONS=true  # Uncomment to run migrations on container start
